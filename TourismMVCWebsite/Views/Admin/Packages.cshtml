                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Image)" alt="Not Found" width="80" height="80" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>

                        <button class="btn btn-sm btn-success" type="submit">@Html.ActionLink("Edit", "EditPakages", new { id = item.PackageId })</button>

                        <button class="btn btn-sm btn-danger" type="submit">@Html.ActionLink("Delete", "DeletePakages", new { id = item.PackageId }, new { onclick = "return confirm('Are sure wants to delete?');" })</button>
